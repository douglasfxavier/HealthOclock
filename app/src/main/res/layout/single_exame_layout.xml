<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_controle_exame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.doug.healthoclock.controller.SingleExameActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Exame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorPatternApp"
            android:id="@+id/textExame" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Unidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPatternApp"/>
        <TextView
            android:text="Unidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textUnidade" />

        <TextView
            android:text="Endereço"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPatternApp"/>
        <TextView
            android:text="Endereço"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textEndereco" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Dados clínicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPatternApp"/>
        <TextView
            android:text="Dados clínicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDados" />

        <TextView
            android:text="Especialidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPatternApp"/>
        <TextView
            android:text="Especialidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textEspecialidade" />

        <TextView
            android:text="Material a examinar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPatternApp"/>
        <TextView
            android:text="Material a examinar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textMaterial" />

        <TextView
            android:text="Data do Exame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPatternApp"/>
        <TextView
            android:text="Data do Exame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textData" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btnEditarControleExame"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryWhite"
                android:text="@string/botao_editar"
                android:background="@color/colorPatternButton"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnExcluirControleExame"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryWhite"
                android:text="@string/botao_excluir"
                android:background="@color/colorPatternButton"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
